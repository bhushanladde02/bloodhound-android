<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:orientation="vertical"
    >
<!-- Image select listner--> 
    <ImageView
        android:id="@+id/imgView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"></ImageView>
<!-- Image select end listner--> 
        <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/navbar"/>
        
   <TextView
      android:id="@+id/textView1"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentTop="true"
      android:text="Register"
      android:textAppearance="?android:attr/textAppearanceLarge" 
      android:textColor="#56A29A"
      android:textStyle="bold"
      android:textSize="32sp"/>  
    
 <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:orientation="vertical"
     android:layout_marginTop="10dp"
    >
   
      <TextView
      android:id="@+id/textView1"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentTop="true"
    
      android:text="Blutooth LE Devices"
      android:textAppearance="?android:attr/textAppearanceLarge" 
      android:textColor="#56A29A"/>
    <!--   android:layout_centerHorizontal="true" -->
      
    
   <EditText
      android:id="@+id/editTextId"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:hint="ID Number"
      android:ems="10" >
      <requestFocus />
   </EditText>
   
     <TextView
      android:id="@+id/textView2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentTop="true"
      android:text="Name"
      android:textAppearance="?android:attr/textAppearanceLarge" 
      android:textColor="#56A29A"/>
    <!--   android:layout_centerHorizontal="true" -->
  
  </LinearLayout>
  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:orientation="vertical"
    >
   <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
     android:orientation="vertical"
    >
   <EditText
      android:id="@+id/editTextFname"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:hint="First Name"
      android:ems="10" >
     </EditText>
     
     <EditText
      android:id="@+id/editTextlName"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:hint="last Name"
      android:ems="10" >
     </EditText>
    </LinearLayout>
     <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/anonicon100"
        android:layout_marginLeft="230dp" />
    </LinearLayout>
    
    </RelativeLayout>
     <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">
      <TextView
      android:id="@+id/textView3"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentTop="true"
      android:text="Photo"
      android:textAppearance="?android:attr/textAppearanceLarge" 
      android:textColor="#56A29A"/>
     </LinearLayout> 
       <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="horizontal">
       <ImageView
        android:id="@+id/imageView3"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:src="@drawable/selectphoto"
         />
          
        <ImageView
        android:id="@+id/imageView4"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:src="@drawable/camera"
        />
        </LinearLayout>
      
          <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">
        
      <TextView
      android:id="@+id/textView4"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentTop="true"
    
      android:text="Address"
      android:textAppearance="?android:attr/textAppearanceLarge" 
      android:textColor="#56A29A"/>
    
      
         <EditText
      android:id="@+id/editTextStreet"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
     
     android:hint="Street Address"
      android:ems="10" >
      
   </EditText>
     </LinearLayout>  
   
            <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="horizontal">
         
         <EditText
      android:id="@+id/editTextCity"
      android:layout_width="200dp"
      android:layout_height="wrap_content"
      
     android:hint="City"
      android:ems="10" >
     </EditText>
     
       <EditText
      android:id="@+id/editTextAZ"
      android:layout_width="50dp"
      android:layout_height="wrap_content"
    
      android:hint="AZ"
      android:ems="10" 
      >
     </EditText>
     
        <EditText
      android:id="@+id/editTextZip"
      android:layout_width="100dp"
      android:layout_height="wrap_content"
     
      android:hint="Zip Code"
      android:ems="10" 
      >
     </EditText>
     </LinearLayout>
        
         <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">
      <TextView
      android:id="@+id/textView5"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentTop="true"
      
      android:text="Description"
      android:textAppearance="?android:attr/textAppearanceLarge"
      android:textColor="#56A29A" />
      </LinearLayout>
      
            <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="horizontal">
      <EditText
      android:id="@+id/editTextAge"
      android:layout_width="118dp"
      android:layout_height="wrap_content"
      
     android:hint="Age"
      android:ems="10" >
     </EditText>
     
       <EditText
      android:id="@+id/editTextheight"
      android:layout_width="118dp"
      android:layout_height="wrap_content"
      
      android:hint="height"
      android:ems="10" 
      >
     </EditText>
     
        <EditText
      android:id="@+id/editTextWeight"
      android:layout_width="118dp"
      android:layout_height="wrap_content"
     
      android:hint="Weight"
      android:ems="10" 
      >
     </EditText>  
       </LinearLayout>
     <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="horizontal">
      <EditText
      android:id="@+id/editTextHColor"
      android:layout_width="180dp"
      android:layout_height="wrap_content"
     
     android:hint="Hare Color"
      android:ems="10" >
     </EditText>
     
      <EditText
      android:id="@+id/editTextEye"
      android:layout_width="180dp"
      android:layout_height="wrap_content"
      android:hint="Eye Color"
      android:ems="10">
     </EditText>  
     </LinearLayout>
     
      <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">
      
         <EditText
      android:id="@+id/editTextFeatures"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
     
      android:hint="Distingwishing Features"
      android:ems="10" 
      >
     </EditText> 
     
          <EditText
      android:id="@+id/editTextNotes"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      
      android:hint="Any Special Notes"
      android:ems="10" 
      >
     </EditText>  
        
          
         <TextView
      android:id="@+id/textView6"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentTop="true"
      
      android:text="Call to Action"
      android:textAppearance="?android:attr/textAppearanceLarge"
      android:textColor="#56A29A" /> 
      
      <EditText
      android:id="@+id/editTextifFind"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      
      android:hint="What should you do if you they find your loved one?"
      android:ems="10" 
      >
     </EditText>  
     
         <TextView
      android:id="@+id/textView7"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentTop="true"
     
      android:text="Permission"
      android:textAppearance="?android:attr/textAppearanceLarge" 
      android:textColor="#56A29A"/> 
      </LinearLayout>
      
            <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">
      
          <TextView
      android:id="@+id/textView8"
      android:textStyle="italic"
      android:textSize="15sp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
    
     
      android:text="Bloodhound requires push notifications and active bluthooth to function
                                                                                             "
      android:textAppearance="?android:attr/textAppearanceLarge" 
      android:textColor="#56A29A"/>  
      </LinearLayout>
      <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="horizontal"
      android:layout_marginTop="10dp" >
      
      <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/uncheck"
        
        />
      <TextView
      android:id="@+id/textView9"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentTop="true"
     
       android:textStyle="italic"
       android:textSize="18sp"
      android:text="      Accept"
      android:textAppearance="?android:attr/textAppearanceLarge" 
      android:textColor="#56A29A"/>
    
      </LinearLayout>
      
          
         <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/submit"
      
        /> 
          
        
</LinearLayout>

</ScrollView>